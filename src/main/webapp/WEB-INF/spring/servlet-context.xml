<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:mvc="http://www.springframework.org/schema/mvc"
   xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
      
      <!-- spring 기본설정 -->
      
      <!-- spring MVC annotation(주석/지시문)을 사용하기 위한 설정-->
      <context:annotation-config/>
      <!-- view(jsp, html)의 파일경로 및 확장자명 설정 -->
      <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
      	<property name="prefix" value="/WEB-INF/views/"/>
      	<property name="suffix" value=".jsp"/>
      </bean>
      <!--
      InternalResourceViewResolver viewResolver = new InternalResourceViewResolver();
      viewResolver.prefix = "/WEB-INF/views/";
      viewResolver.suffix = ".jsp";
      와 같음 (싱글턴 방식으로 어디서든 쓸 수 있게 java대신 xml에 정의)
      -->
      
      <!-- 공통 패키지 -->
      <context:component-scan base-package="com.mbc.pro"/>
      
      <!-- AJAX 사용하기 -->
      <mvc:annotation-driven/>
      
      <!-- Spring에서 처리할 수 없는 요청은 Tomcat으로 위임 -->
      <mvc:default-servlet-handler/>
          
</beans>
